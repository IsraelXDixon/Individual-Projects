@model IEnumerable<KnowItAlls.Models.OnlineExam>

@{
    ViewData["Title"] = "Index";
}

<h1>Geography Quiz</h1>

<table class="table">

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Qid) ) @Html.DisplayFor(modelItem => item.Question)
                </td>
                <td>
                    <input type="radio" id="option1" name="@Html.DisplayFor(modelItem => item.Qid)" class="rb" value=" @Html.DisplayFor(modelItem => item.Option1)" />
                    @Html.DisplayFor(modelItem => item.Option1)
                    <input type="radio" id="option2" name="@Html.DisplayFor(modelItem => item.Qid)" class="rb" value=" @Html.DisplayFor(modelItem => item.Option2)" />
                    @Html.DisplayFor(modelItem => item.Option2)
                    <input type="radio" id="option3" name="@Html.DisplayFor(modelItem => item.Qid)" class="rb" value=" @Html.DisplayFor(modelItem => item.Option3)" />
                    @Html.DisplayFor(modelItem => item.Option3)
                    <input type="radio" id="option4" name="@Html.DisplayFor(modelItem => item.Qid)" class="rb" value=" @Html.DisplayFor(modelItem => item.Option4)" />
                    @Html.DisplayFor(modelItem => item.Option4)
                </td>
            </tr>
            <tr>
                <td>
                    <label id="correctans" name="@Html.DisplayFor(modelItem => item.Qid)" class="rb" style="display:none; color:forestgreen"><b>@Html.DisplayFor(modelItem => item.Correctans)</b></label>
                </td>
            </tr>
        }
    </tbody>
</table>

    <button type="button" id="butexam" class="btn-success" oneclick="displayresult();">Submit</button>
<br/>
    <label id="Useranswers"></label>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>


<script>
    $(document).ready(function ()
    {
        $("#butexam").click(function ()
        {
            $(".rb").show();
            $(".rb").attr("disabled", true);
        });
    });

    function displayresult() {
        document.getElementById("Useranswers").innerHTML = "";
        var results = document.getElementsByTagName('input');
        for (i = 0; i < results.length; i++) {
            if (results[i].type == "radio") {
                if (results[i].checked) {
                    document.getElementById("Useranswers").innerHTML += "Q " + results[i].name + " )" + " The Selected Answer is " + results[i].value + "<br/>";
                }
            }
        }
    }
</script>